<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kimjunu.waterproof.StartActivity"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:textColor="#ffffff"
        android:textSize="48dp"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/btnStart"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="openPlayActivity" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/btnSettings"
        android:layout_below="@+id/btnStart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:onClick="openSettingsActivity" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Leaderboard"
        android:id="@+id/btnLeaderboard"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/btnSettings"
        android:layout_alignStart="@+id/btnSettings"
        android:onClick="openLeaderboardActivity" />
</RelativeLayout>
